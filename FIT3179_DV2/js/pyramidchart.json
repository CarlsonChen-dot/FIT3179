{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "transparent",
  "title": {"text":"Average Undergraduate and Postgraduate Fees of Top 10 UK Universities","anchor": "middle"},
  "data": {
    "url": "https://raw.githubusercontent.com/CarlsonChen-dot/FIT3179/main/FIT3179_DV2/data/uk_universities.csv"
  },
  "hconcat": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/CarlsonChen-dot/FIT3179/main/FIT3179_DV2/data/uk_universities.csv"
      },
      "transform": [
        {
          "filter": {"field": "UK_rank", "lte": 10}
        },
        {
          "aggregate": [
            {
              "op": "sum",
              "field": "UG_average_fees_(in_pounds)",
              "as": "total_UG_fees"
            }
          ],
          "groupby": ["University_name"]
        }
      ],
      "mark": "bar",
      "encoding": {
        "y": {
          "field": "University_name",
          "type": "nominal",
          "axis": null,
          "sort": {"field": "UK_rank", "order": "ascending"}
        },
        "x": {
          "field": "total_UG_fees",
          "type": "quantitative",
          "title": "Undergraduate Fees",
          "sort": "descending"
        },
        "color": {
          "value": "#026edb"
        },
        "tooltip": [
          {
            "field": "total_UG_fees",
            "type": "quantitative",
            "title": "Undergraduate Fees in Pounds"
          }
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/CarlsonChen-dot/FIT3179/main/FIT3179_DV2/data/uk_universities.csv"
      },
      "width": 20,
      "view": {"stroke": null},
      "mark": {
        "type": "text",
        "align": "center"
      },
      "transform": [
        {
          "filter": {"field": "UK_rank", "lte": 10}
        }
      ],
      "encoding": {
        "y": {
          "field": "University_name",
          "type": "ordinal",
          "axis": null,
          "sort": {"field": "UK_rank", "order": "ascending"}
        },
        "text": {
          "field": "University_name",
          "type": "nominal"
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/CarlsonChen-dot/FIT3179/main/FIT3179_DV2/data/uk_universities.csv"
      },
      "transform": [
        {
          "filter": {"field": "UK_rank", "lte": 10}
        },
        {
          "aggregate": [
            {
              "op": "sum",
              "field": "PG_average_fees_(in_pounds)",
              "as": "total_PG_fees"
            }
          ],
          "groupby": ["University_name"]
        }
      ],
      "mark": "bar",
      "encoding": {
        "y": {
          "field": "University_name",
          "type": "nominal",
          "axis": null,
          "sort": {"field": "UK_rank", "order": "ascending"}
        },
        "x": {
          "field": "total_PG_fees",
          "type": "quantitative",
          "title": "Postgraduate Fees",
          "sort": "ascending"
        },
        "color": {
          "value": "#013d79"
        },
        "tooltip": [
          {
            "field": "total_PG_fees",
            "type": "quantitative",
            "title": "Postgraduate Fees in Pounds"
          }
        ]
      }
    }
  ],
  "config": {
    "view": {"stroke": null}
    
  }
}