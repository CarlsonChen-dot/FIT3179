{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Population pyramid-like visualization of UG and PG average fees for the top 10 universities.",
  "data": {
    "url": "https://raw.githubusercontent.com/CarlsonChen-dot/FIT3179/main/FIT3179_DV2/data/uk_universities.csv"
  },
  "hconcat": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/CarlsonChen-dot/FIT3179/main/FIT3179_DV2/data/uk_universities.csv"
      },
      "transform": [
        {
          "filter": {"field": "UK_rank", "lte": 10}
        },
        {
          "aggregate": [
            {
              "op": "sum",
              "field": "UG_average_fees_(in_pounds)",
              "as": "total_UG_fees"
            }
          ],
          "groupby": ["University_name"]
        }
      ],
      "mark": "bar",
      "title": "Top 10 Universities in the UK",
      "encoding": {
        "y": {
          "field": "University_name",
          "type": "nominal",
          "axis": null,
          "sort": {"field": "UK_rank", "order": "ascending"}
        },
        "x": {
          "field": "total_UG_fees",
          "type": "quantitative",
          "title": "Total Average UG Fees",
          "sort": "descending"
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/CarlsonChen-dot/FIT3179/main/FIT3179_DV2/data/uk_universities.csv"
      },
      "width": 20,
      "view": {"stroke": null},
      "mark": {
        "type": "text",
        "align": "center"
      },
      "transform": [
        {
          "filter": {"field": "UK_rank", "lte": 10}
        }
      ],
      "encoding": {
        "y": {
          "field": "University_name",
          "type": "ordinal",
          "axis": null,
          "sort": {"field": "UK_rank", "order": "ascending"}
        },
        "text": {
          "field": "University_name",
          "type": "nominal"
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/CarlsonChen-dot/FIT3179/main/FIT3179_DV2/data/uk_universities.csv"
      },
      "transform": [
        {
          "filter": {"field": "UK_rank", "lte": 10}
        },
        {
          "aggregate": [
            {
              "op": "sum",
              "field": "PG_average_fees_(in_pounds)",
              "as": "total_PG_fees"
            }
          ],
          "groupby": ["University_name"]
        }
      ],
      "mark": "bar",
      "encoding": {
        "y": {
          "field": "University_name",
          "type": "nominal",
          "axis": null,
          "sort": {"field": "UK_rank", "order": "ascending"}
        },
        "x": {
          "field": "total_PG_fees",
          "type": "quantitative",
          "title": "Total Average PG Fees",
          "sort": "ascending"
        }
      }
    }
  ],
  "config": {
    "view": {"stroke": null},
    "axis": {"grid": false}
  }
}