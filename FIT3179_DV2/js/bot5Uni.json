{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 370,
  "height": 200,
  "background": "transparent",
  "title": "Bottom 5 Universities Ranking",
  "data": {"url": "https://raw.githubusercontent.com/CarlsonChen-dot/FIT3179/main/FIT3179_DV2/data/uk_universities.csv"},
  "transform": [
    {
      "window": [{"op": "rank", "as": "rank"}],
      "sort": [{"field": "UK_rank", "order": "ascending"}]
    },
    {
      "calculate": "datum.UK_rank",
      "as": "reverse_rank"
    },
    {
      "filter": "datum.reverse_rank >=127" 
    }
  ],
  "encoding": {
    "x": {
      "field": "UK_rank",
      "type": "quantitative",
      "title": "UK ranking",
      "axis" : null
      
    },
    "y": {
      "field": "University_name",
      "type": "nominal",
      "sort": ["Ravensbourne University London", "Wrexham Glyndwr University", "University of Suffolk", "University of Bedfordshire", "University of East London"],
      "title": ""
    }
  },
  "layer": [
    {
      "mark": {
        "type": "bar",
        "size": 30,
        "color": "#AFE9B8"
      },
      "encoding": {
        "tooltip": [
          { "field": "University_name", "type": "nominal", "title": "University Name" },
          { "field": "UK_rank", "type": "quantitative", "title": "UK Ranking" }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 5,
        "color": "black"
      },
      "encoding": {
        "text": {"field": "UK_rank", "type": "quantitative"}
      }
    }
  ],
  "config": {
    "view": {"stroke": null}
    
  }
}