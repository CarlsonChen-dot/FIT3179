{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 400,
    "title": "World Rank vs. CWUR Score with Estimated Living Cost",
    "data": {
        "url": "https://raw.githubusercontent.com/CarlsonChen-dot/FIT3179/main/FIT3179_DV2/data/uk_universities.csv"
    },
    "mark": "circle",
    "encoding": {
        "x": {
            "field": "World_rank",
            "type": "quantitative",
            "title": "World Rank"
        },
        "y": {
            "field": "CWUR_score",
            "type": "quantitative",
            "scale": {
                "type": "log",
                "domain": [
                    60,
                    100
                ]
            }
        },
        "color": {
            "field": "Region",
            "type": "nominal"
        },
        "size": {
            "field": "Estimated_cost_of_living_per_year_(in_pounds)",
            "type": "quantitative", 
            "scale": {
                "type": "threshold",
                "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
                "range": [10, 50, 150, 200, 300, 400]
                },
                "legend": {"format": ".1s"}
                 
        }
    }
}