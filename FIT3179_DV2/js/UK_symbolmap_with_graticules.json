{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  
  "background": "transparent",
  "width": 800,
  "height": 500,
  "params": [
    {
      "name": "zoom_level",
      "value": 4000,
      "bind": {
        "input": "range",
        "min": 2000,
        "max": 15000,
        "step": 100,
        "name": "Zoom: "
      }
    },
    {
      "name": "center_to",
      "value": [
        -4,
        54
      ],
      "bind": {
        "input": "select",
        "options": [
          [
            -4,
            54
          ],
          [
            -0.1278,
            51.5074
          ],
          [
            -2.244644,
            53.483959
          ],
          [
            -3.1883,
            55.9533
          ],
          [
            -6.26031,
            53.349805
          ],
          [
            -8.2439,
            53.4129
          ],
          [
            -1.8904,
            52.4862
          ]
        ],
        "labels": [
          "United Kingdom",
          "London",
          "Manchester",
          "Edinburgh",
          "Dublin",
          "Ireland",
          "Birmingham"
        ],
        "name": "Map Centre: "
      }
    }
  ],
  "projection": {
    "type": "equirectangular",
    "center": {
      "expr": "center_to"
    },
    "scale": {
      "expr": "zoom_level"
    }
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/CarlsonChen-dot/FIT3179_DV2/main/FIT3179_DV2/js/UK_with_graticules.json",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_admin_1_states_provinces"
        }
      },
      "transform": [
        {
          "calculate": "'Data is not available in ' +datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "#ddd",
        "stroke": "floralwhite",
        "strokeWidth": 1
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/CarlsonChen-dot/FIT3179/main/FIT3179_DV2/data/uk_universities.csv"
      },
      "mark": {
        "type": "circle",
        "size": 80
      },
      "encoding": {
        "longitude": {
          "field": "Longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "Latitude",
          "type": "quantitative"
        },
        "color": {
          "field": "UK_rank",
          "type": "quantitative",
          "title": "UK Ranking",
          "scale": {
            "type": "linear",
            "domain": [1, 131], 
            "range": ["#124019", "#AFE9B8"] 
          }
        },
        "tooltip": [
          {
            "field": "University_name",
            "type": "nominal",
            "title": "University Name"
          },
          {
            "field": "Founded_year",
            "type": "quantitative",
            "title": "Year Founded"
          },
          {
            "field": "Motto",
            "type": "nominal",
            "title": "University Motto"
          },
          {
            "field": "UK_rank",
            "type": "quantitative",
            "title": "UK Ranking"
          }
        ]
      }
    }
  ],
  "config": {
    "view": {
      "stroke": "transparent" 
    },
    "axis": {
      "grid": false 
    }
  }
}