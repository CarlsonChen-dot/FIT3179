{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 600,
  "height": 450,
  "title": "Top-Ranked UK Universities",
  "projection": {
    "type": "equalEarth"
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/CarlsonChen-dot/FIT3179_DV2/main/FIT3179_DV2/js/UK_with_graticules.json",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_admin_1_states_provinces"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "floralwhite"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/CarlsonChen-dot/FIT3179_DV2/main/FIT3179_DV2/js/UK_with_graticules.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_graticules_30"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "lightgray"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/CarlsonChen-dot/FIT3179/main/FIT3179_DV2/data/uk_universities.csv"
      },
      "mark": {
        "type": "circle"
      },
      "encoding": {
        "longitude": {
          "field": "Longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "Latitude",
          "type": "quantitative"
        },
        "color": {
          "field": "UK_rank",
          "type": "quantitative",
          "title": "UK Ranking",
          "scale": {
            "scheme": "reds",
            "domain": [
              131,
              1
            ]
          }
        },
        "tooltip": [
          {
            "field": "University_name",
            "type": "nominal",
            "title": "University Name"
          },
          {
            "field": "Founded_year",
            "type": "quantitative",
            "title": "Year Founded"
          },
          {
            "field": "Motto",
            "type": "nominal",
            "title": "University Motto"
          },
          {
            "field": "UK_rank",
            "type": "quantitative",
            "title": "UK Ranking"
          }
        ]
      }
    }
  ]
}