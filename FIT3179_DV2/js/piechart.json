{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "International Students Percentage by Region",
  "height": 200,
  "width": 350,
  "background": "transparent",
  "data": {
    "url": "https://raw.githubusercontent.com/CarlsonChen-dot/FIT3179/main/FIT3179_DV2/data/uk_universities.csv"
  },
  "transform": [
    {
      "filter": "datum.Region != null"
    },
    {
      "aggregate": [
        {
          "op": "sum",
          "field": "International_students_percentage",
          "as": "total_percentage"
        }
      ],
      "groupby": [
        "Region"
      ]
    }
  ],
  "mark": "arc",
  "encoding": {
    "theta": {
      "field": "total_percentage",
      "type": "quantitative"
    },
    "color": {
      "field": "Region",
      "type": "nominal",
      "scale": {
        "domain": [
          "East Midlands",
          "East of England",
          "London",
          "North East England",
          "North West England",
          "Northern Ireland",
          "Scotland",
          "South East England",
          "South West England",
          "Wales",
          "West Midlands",
          "Yorkshire and the Humber"
        ],
        "range": [
          "#1f77b4",
          "#ff7f0e",
          "#ff0000",
          "#2ca02c",
          "#9467bd",
          "#8c564b",
          "#e377c2",
          "#7f7f7f",
          "#bcbd22",
          "#17becf",
          "#d62728",
          "#0000ff"
        ]
      }
    },
    "tooltip": [
      {
        "field": "Region",
        "type": "nominal",
        "title": "Region"
      },
      {
        "field": "total_percentage",
        "type": "quantitative",
        "format": ".2%",
        "title": "International Students Percentage"
      }
    ]
  },
  "config": {
    "view": {
      "stroke": "transparent"
    }
  }
}
