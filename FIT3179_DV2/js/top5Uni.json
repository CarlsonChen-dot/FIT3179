{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 370,
  "height": 200,
  "background": "transparent",
  "title": "Top 5 Universities Ranking",
  "data": {"url": "https://raw.githubusercontent.com/CarlsonChen-dot/FIT3179/main/FIT3179_DV2/data/uk_universities.csv"},
  "transform": [
    {
      "window": [{"op": "rank", "as": "rank"}],
      "sort": [{"field": "UK_rank", "order": "ascending"}]
    },
    {
      "calculate": "datum.UK_rank",
      "as": "rank"
    },
    {
      "filter": "datum.rank <= 5" 
    }
  ],
  "encoding": {
    "x": {
      "field": "UK_rank",
      "type": "quantitative",
      "title": "UK ranking",
      "axis" : null
      
    },
    "y": {
      "field": "University_name",
      "type": "nominal",
      "title": "",
      "sort": ["University of Cambridge", "University of Oxford", "University of St Andrews", "Imperial College London", "Loughborough University"]
    }
  },
  "layer": [
    {
      "mark": {
        "type": "bar",
        "size": 30,
        "color": "green"
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 5,
        "color": "black"
      },
      "encoding": {
        "text": {"field": "UK_rank", "type": "quantitative"}
      }
    }
  ],
  "config": {
    "view": {"stroke": null}
    
  }
}